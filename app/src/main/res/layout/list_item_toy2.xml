<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvToy1"
        android:layout_width="160dp"
        android:layout_height="220dp"
        android:elevation="10dp"
        app:cardMaxElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvToyTouch1"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="10dp"
                android:background="@color/unselection_toolbar"
                app:cardBackgroundColor="@color/toy_background1"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/toyImg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/toy1" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/toyName1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="Robot Dog"
                android:textColor="@color/unselection_toolbar"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/toyPrice1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="â‚¹899"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>